#############################################
# autostart applications/services on login: #
#############################################

# get ARandR to apply the screen layout
exec_always --no-startup-id ~/.screenlayout/default.sh

# get auth to work with polkit-gnome
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# execute .desktop files + apps using /etc/xdg/autostart.
# https://github.com/jceb/dex
#exec --no-startup-id dex -a -s /etc/xdg/autostart/:~/.config/autostart/
exec --no-startup-id dex --autostart --environment i3

# num lock activated
#exec --no-startup-id numlockx on

# configure multiple keyboard layouts and hotkey to switch
exec --no-startup-id sleep 1 && setxkbmap -layout 'us,rs,rs' -variant euro,latin,yz -option 'grp:rctrl_rshift_toggle,compose:ralt'

# start conky
exec_always --no-startup-id conky

# set wallpaper
exec --no-startup-id sleep 1 && feh --bg-fill ~/.config/i3/wp.png

# set powersavings for display:
exec --no-startup-id xset s 480 dpms 600 600 600

# disable power saving (for example if using xscreensaver)
#exec --no-startup-id xset -dpms

# automatic lock 
# https://wiki.archlinux.org/title/Session_lock#xautolock
exec --no-startup-id xautolock -time 10 -notify 60 -notifier "notify-send 'Auto-Locking in 1 minute...'" -locker "$scriptdir/blur-lock ~/.config/i3/wp.png"

# xscreensaver
# https://www.jwz.org/xscreensaver
#exec --no-startup-id xscreensaver --no-splash

# Desktop notifications
exec --no-startup-id dbus-launch dunst --config ~/.config/dunst/dunstrc

# autotiling
# https://github.com/nwg-piotr/autotiling
# $ yay -S autotiling (it is in AUR)
#exec_always --no-startup-id autotiling

# Autostart apps
exec --no-startup-id sleep 1 && optimus-manager-qt
exec --no-startup-id sleep 2 && alacritty
exec --no-startup-id sleep 5 && firefox 
exec --no-startup-id sleep 3 && nextcloud --background
exec --no-startup-id sleep 6 && webcord
exec --no-startup-id sleep 10 && steam

