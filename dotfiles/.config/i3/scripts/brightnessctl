# Script to modify display brightness using brightnessctl
# Arguments are passed to brightnessctl

#!/bin/bash

brightnessctl s $@
if [ $? -eq 0 ]; then
    curr=$(brightnessctl g)
    max=$(brightnessctl m)
    notify-send "  Brightness: $((100*$curr/$max))% ($curr/$max)"
else
    notify-send "  Failed to set display brightness. Is brightnessctl installed?"
    exit 1
fi

