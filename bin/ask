#!/bin/bash

# http://djm.me/ask
while true; do

    if [ "${2:-}" = "Y" ]; then
        prompt="Y/n"
        default=Y
    elif [ "${2:-}" = "N" ]; then
        prompt="y/N"
        default=N
    else
        prompt="y/n"
        default=
    fi

    # Ask the question (not using "read -p" as it uses stderr not stdout)
    echo -n "$1 [$prompt] "

    # Read the answer (use /dev/tty in case stdin is redirected from somewhere else)
    read REPLY </dev/tty
    sleep 1

    # Default?
    if [ -z "$REPLY" ]; then
        REPLY="$default"
    fi

    # Check if the reply is valid
    case "$REPLY" in
        Y*|y*) exit 0 ;;
        N*|n*) exit 1 ;;
    esac

done

