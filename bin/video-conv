#!/bin/bash

function usage ()
{
    echo -e "usage: $(basename $0) video|directory output_dir [options]"
    echo -e "options:"
    echo -e "    (--codec   | -c) codec     (e.g., '-s x265')"
    echo -e "    (--tag     | -t) vtag      (e.g., '-t hvc1')"
    echo -e "    (--output  | -o) format    (e.g., '-o mp4')"
    echo -e "    (--scale   | -s) value     (e.g., '-s 720')"
    echo -e "    (--quality | -q) [0..51]   (e.g., '-q 18' for visually lossless)"
    echo -e "    (--preset  | -p) preset    (e.g., '-p veryslow')"
    echo -e "    --verbose  | -v            (do not suppress ffmpeg output)"
    echo -e "    --subs                     (includes subtitles)"
    echo -e "    --log   | -l               (log ffmpeg output to a file)"
    echo -e "    --error | -e               (halt on ffmpeg error)"
    exit 2
}

SHORT_OPTS=h,s:,q:,p:,l,e,v,c:,t:,o:
LONG_OPTS=help,codec:,scale:,tag:,output:,quality:,preset:,verbose,subs,log,error
OPTS=$(getopt --alternative --name 'argument error' --options $SHORT_OPTS --longoptions $LONG_OPTS -- "$@") 
if [ $? -ne 0 ]; then
    std::fat "failed to parse provided arguments"
fi
eval set -- $OPTS

STRICT=false
LOG_FILE="/dev/null"
CODEC="libx265"
TAG="hvc1"
OUT="mp4"
SUBS=""
QUALITY=""
SCALE=""
PRESET=""

while :
do
    case "$1" in
        -l | --log)
            LOG_FILE="ffmpeg_out_$(date +%s).log"
            echo "logging output to: $LOG_FILE"
            ;;
        -e | --error)
            STRICT=true
            ;;
        -v | --verbose)
            LOG_FILE="/dev/tty"
            ;;
        -s | --scale)
            SCALE="-vf scale=-1:$2"
            shift
            ;;
        -c | --codec)
            CODEC="lib$2"
            shift
            ;;
        -t | --tag)
            TAG="$2"
            shift
            ;;
        -o | --output)
            OUT="$2"
            shift
            ;;
        -q | --quality)
            QUALITY="-crf $2"
            shift
            ;;
        -p | --preset)
            PRESET="-preset $2"
            shift
            ;;
        -h | --help)
            usage
            ;;
        --subs)
            SUBS="-map 0:s:0 -c:s copy -metadata:s:s:0 language=eng"
            ;;
        --)
            shift;
            break
            ;;
        *)
            usage "unknown option: $1"
            ;;
    esac
    shift;
done

if [ $# -ne 2 ]; then
    usage
fi

errored_entries=()

function process ()
{
    in="$1"
    out="$2/${in/%mkv/$OUT}"
    mkdir -p "$(dirname "$out")"
    echo "$in -> $out"

    ffmpeg -nostdin -y \
        -i "$in" \
        $SCALE \
        -map 0:v:0 \
        -map 0:a:0 \
        -c:v $CODEC -vtag $TAG $QUALITY $PRESET \
        $SUBS \
        -movflags faststart \
        "$out" \
        2>> "$LOG_FILE"
    if [ $? -ne 0 ] ; then
        if $STRICT ; then
            exit $?
        fi
        errored_entries+=("$in")
        echo "error: $in"
    fi
}

if [ -d "$1" ]; then
    find "$1" -type f -print0 | 
    while IFS= read -r -d '' f; do 
        process "$f" "$2"
    done
else
    process "$1" "$2"
fi

echo " --- errors ---"
for errored_entry in "${errored_entries[@]}"; do
    echo "$errored_entry"
done

