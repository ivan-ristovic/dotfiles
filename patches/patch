#!/bin/bash

source ../utils.sh

for patch in $(find ./*/ -type f) ; do
    target_file=${patch:1} 
    if [[ $patch == *.patch ]] ; then
        target_file="${target_file%.patch}"
        diff=$(comm -13 <(sort -u "$target_file") <(sort -u "$patch"))
        if [ -n "$diff" ]; then
            fmt::msg "Patching: $target_file"
            cat "$patch" >> "$target_file"
        else
            fmt::msg "Skipping: $target_file"
        fi
    else
        fmt::msg "Swapping: $target_file"
        if ! sudo cp --no-preserve=mode,ownership -rf "$patch" "$target_file" ; then
            fmt::err "Swap failed: $patch"
        fi
    fi
done

