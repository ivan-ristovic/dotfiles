source $HOME/.vimrc.d/defaults.vim


call plug#begin("~/.nvim-latex/bundle")

Plug 'ivan-cukic/vim-colors-penultimate'

source $HOME/.vimrc.d/plugins-set-common.vim
source $HOME/.vimrc.d/plugins-set-motion.vim

let g:vimtex_complete_close_braces = 1
let g:vimtex_view_method = 'zathura'
Plug 'lervag/vimtex'

Plug 'rbonvall/vim-textobj-latex'

nnoremap <Leader>c    <Esc>:Neomake!<CR>|  "" Compile the program
inoremap <S-Leader>c  <Esc>:Neomake!<CR>
nnoremap <S-Leader>c  <Esc>:Neomake!<CR>
Plug 'neomake/neomake'

call plug#end()

Plug 'roxma/vim-hug-neovim-rpc',
      \ !has('nvim') ? {} : { 'on' : [] }
Plug 'roxma/nvim-completion-manager'
Plug 'roxma/ncm-github'
Plug 'Shougo/neco-vim'
Plug 'Shougo/neco-syntax'
Plug 'wellle/tmux-complete.vim'


call camelcasemotion#CreateMotionMappings(',')
colors penultimate

let g:tmuxcomplete#trigger = ''

let g:cm_sources_override = {
      \ 'cm-bufkeyword' : {'abbreviation' : 'key'},
      \ 'cm-ultisnips' : {
      \   'abbreviation' : 'snip',
      \   'priority' : 8,
      \ },
      \ 'cm-tmux' : {'enable' : 0},
      \ 'neco-syntax' : {'priority' : 4},
      \}
let g:cm_completeopt = 'menu,menuone,noinsert,noselect,preview'

autocmd User CmSetup call cm#register_source({
    \ 'name' : 'vimtex',
    \ 'priority': 8,
    \ 'scoping': 1,
    \ 'scopes': ['tex'],
    \ 'abbreviation': 'tex',
    \ 'cm_refresh_patterns': g:vimtex#re#ncm,
    \ 'cm_refresh': {'omnifunc': 'vimtex#complete#omnifunc'},
    \ })
